@model crud_aspnetcore_mvc.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Create";
}

 <h1>
    @if(Model != null && Model.TextMessage != null){
        @Model.TextMessage 
    }

    else{
        @: Create new user
    }
</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            <input asp-for="@Model.User.Id" hidden />
            <div class="form-group">
                <label asp-for="@Model.User.Name" class="control-label"></label>
                <input asp-for="@Model.User.Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="@Model.User.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.Email" class="control-label"></label>
                <input asp-for="@Model.User.Email" class="form-control" placeholder="Email Address" />
                <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                    @if(Model != null && Model.TextMessage != null){
                        <input type="submit" value="@Model.TextMessage" class="btn btn-primary" />
                    }
                    else {
                        <input type="submit" value="Create" class="btn btn-primary" />
                    }
                
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
